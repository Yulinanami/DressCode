<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.weather.WeatherFragment">

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tab_weather"
        android:textAppearance="?attr/textAppearanceHeadlineSmall" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorSurfaceVariant" />

    <TextView
        android:id="@+id/section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:textStyle="bold"
        tools:text="杭州" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRequestPermission"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_request_permission" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectCity"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/btn_select_city" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorSurfaceVariant"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/weather_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textStyle="bold"
                tools:text="南京 · 24°" />

            <TextView
                android:id="@+id/weather_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="晴 · 东南风 · 湿度 45%" />

            <LinearLayout
                android:id="@+id/progress_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    style="@style/Widget.Material3.CircularProgressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorSurfaceVariant"
        app:strokeWidth="1dp"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weather_recommend_title"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFetchRecommendation"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/weather_recommend_action" />

            <LinearLayout
                android:id="@+id/recommendation_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    style="@style/Widget.Material3.CircularProgressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/weather_recommend_loading"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recommendation_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/recommendation_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="?attr/colorSurfaceVariant"
                    tools:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/recommendation_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textStyle="bold"
                    tools:text="夏日通勤" />

                <TextView
                    android:id="@+id/recommendation_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="通勤 · 夏季 · 清爽" />

                <TextView
                    android:id="@+id/recommendation_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    tools:text="因为气温较高，推荐这套清凉的夏季通勤穿搭" />
            </LinearLayout>

            <TextView
                android:id="@+id/recommendation_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/weather_recommend_empty"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:visibility="gone"
                tools:visibility="gone" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
